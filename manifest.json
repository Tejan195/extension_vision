{
  "manifest_version": 3,
  "name": "VisionAid Color Correction",
  "version": "1.0",
  "description": "System-wide color vision correction for various types of color blindness",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon48.png",
      "48": "icons/icon128.png",
      "128": "icons/icon192.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon48.png",
    "48": "icons/icon128.png",
    "128": "icons/icon192.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}